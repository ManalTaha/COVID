<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp"
    android:background="@drawable/white_board">

        <TextView
            android:id="@+id/info_window_cases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:textStyle="italic"
            tools:text="Bubble description" />
        <TextView
            android:id="@+id/info_window_deaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_window_cases"
            android:textSize="12sp"
            android:textColor="#FF0000"
            android:textStyle="italic"
            tools:text="Bubble description" />
        <TextView
            android:id="@+id/info_window_recover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_window_deaths"
            android:textSize="12sp"
            android:textColor="#20BE25"
            android:textStyle="italic"
            tools:text="Bubble description" />

</LinearLayout>